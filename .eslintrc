{
	"extends": [
    "eslint:recommended"
  ],
	"env": {
		"browser": true,
		"node": true,
		"es6": true
	},
	"parserOptions": {
		"sourceType": "module",
		"ecmaVersion": 6
	},
	"rules": {
		"strict": "off",
		"quotes": ["error", "single"],
		"no-console": "error",
		"no-debugger": "error",
		"no-constant-condition": "error",
		"no-caller": "error",
		"guard-for-in": "error",
		"no-eval": "error",
		"no-extra-bind": "error",
		"no-implicit-globals": "error",
		"no-implied-eval": "error",
		"no-iterator": "error",
		"no-lone-blocks": "error",
		"no-loop-func": "error",
		"yoda": "error",
		"indent": ["error", 2, {
			"SwitchCase": 1
		}],
		"no-mixed-spaces-and-tabs": ["error", "smart-tabs"]
	},
	"globals": {
    "VERSION": true,
    "describe": true,
    "beforeAll": true,
    "beforeEach": true,
    "it": true,
    "expect": true,
    "jasmine": true,
    "spyOn": true
	}
}
